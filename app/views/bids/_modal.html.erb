<div class="modal-header">
  <button id="bid-modal-close" type="button" class="close" data-dismiss="modal" aria-hidden="true">Ã—</button>
  <h3 id="bid-header">Modal header</h3>
</div>
<div class="modal-body">
  <% @bids.each do |bid| %>
      <div>
        <strong><%= bid.user.username %>:</strong>
        <%= bid.price %>
        <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                    [bid.car, bid],
                    :method => :delete,
                    :data => {:confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?'))},
                    :class => 'btn btn-mini btn-danger' %>
      </div>
   <% end %>
</div>
<div class="modal-footer">
  <%= form_for [@car, @car.bids.build], url: bids_create_modal_path(@car), method: 'post', remote: true do |f| %>
      <div id="bid-modal-error">
      </div>
      <strong><%= current_user.username %>:</strong>
      <%= f.number_field :price%>
      <%= f.submit %>
  <% end %>
</div>