<% provide(:title, "Sign in") %>
<h1>Sign in</h1>

<div class="row">
  <div class="span6 offset3">
    <%= form_for(:session, url: sessions_path) do |f| %>

        <%= f.label :username %>
        <%= f.text_field :username %>

        <%= f.label :password %>
        <%= f.password_field :password %>
                      <br/>
        <%= f.submit "Sign in", class: "btn btn-small btn-primary" %>
    <% end %>

  </div>
</div>