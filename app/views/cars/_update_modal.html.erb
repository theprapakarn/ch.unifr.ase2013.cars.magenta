<div class="modal-header">
  <button id="car-modal-close" type="button" class="close" data-dismiss="modal" aria-hidden="true">Ã—</button>
  <h3 id="car-header">Modal header</h3>
</div>
<%= form_for @car, url: cars_update_modal_path(@car), :html => {:class => 'form-horizontal'}, method: 'post', remote: true do |f| %>
    <div id="car-modal-error">
    </div>
    <div class="modal-body">
      <div class="control-group">
        <%= f.label :model, :class => 'control-label' %>
        <div class="controls">
          <%= f.text_field :model, :class => 'text_field' %>
        </div>
      </div>
      <div class="control-group">
        <%= f.label :brand, :class => 'control-label' %>
        <div class="controls">
          <%= f.text_field :brand, :class => 'text_field' %>
        </div>
      </div>
    </div>
    <div class="modal-footer">
        <%= f.submit nil, :class => 'btn btn-primary' %>
        <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                    cars_path, :class => 'btn' %>
    </div>
<% end %>
